generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model City {
  id          Int          @id @default(autoincrement())
  name        String
  country     String
  description String
  northBound  Float
  southBound  Float
  eastBound   Float
  westBound   Float
  attractions Attraction[]
}

model Attraction {
  id          String  @id ///As received from Azure maps API
  name        String
  description String
  city        City    @relation(fields: [cityId], references: [id])
  cityId      Int
  latitude    Float
  longitude   Float
  topLeft     Float[]
  bottomRight Float[]
}
